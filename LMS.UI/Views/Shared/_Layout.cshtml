<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.Identity.IsAuthenticated == true)
                    {
                        <li class="nav-item"><a class="nav-link" href="/Account/myprofile">@Session["CurrentUserName"]</a></li>
                    }
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                    @if (User.Identity.IsAuthenticated == false)
                    {
                        <li class="nav-item"><a class="nav-link" href="/Account/Register">Register</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/Login">Login</a></li>
                    }

                    @if (User.Identity.IsAuthenticated == true)
                    {
                        //  <li class="nav-item"><a class="nav-link" href="/Account/myprofile">My Profile</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/LeaveApply">LeaveApply</a></li>

                        <li class="nav-item"><a class="nav-link" href="/Account/Search">SearchEmployee</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/LeaveStatus">LeaveStatus</a></li>


                        if (User.IsInRole("Manager") || User.IsInRole("Admin") || User.IsInRole("AdminSpecial"))
                        {
                            <li>@Html.ActionLink("Employees", "Employees", "Account")</li>

                            <li class="nav-item"><a class="nav-link" href="/Account/LeaveView">LeaveView</a></li>
                        }

                        <li class="nav-item"><a class="nav-link" href="/Account/Logout">Logout</a></li>

                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
       
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
