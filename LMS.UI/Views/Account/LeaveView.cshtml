@model List<LMS.Model.Leave>

@{
    ViewBag.Title = "LeaveView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>LeaveView</h2>

<html>

<body>
    <table border="1">
        <tr>

            <th width="200">Employee Name</th>
            <th width="200">Department Name</th>
            <th width="200">Projectid</th>
            <th width="200">StartDate</th>
            <th width="200">EndDate</th>
            <th width="200">No Of days</th>
            <th width="200">Status</th>

            @if(User.IsInRole("Manager")|| User.IsInRole("AdminSpecial"))
            {
            <th>Edit</th>
            }

        </tr>
        @foreach (var emp in Model)
        {
    <tr>
        <td>@emp.EmployeeName</td>
        <td>@emp.DepartmentName</td>
        <td>@emp.Projectid</td>
        <td>@emp.StartDate</td>
        <td>@emp.EndDate</td>
        <td>@emp.Number</td>
        <td>@emp.Status</td>

        @if (User.IsInRole("Manager") || User.IsInRole("AdminSpecial"))
        {
            <td> <a href="/Account/LeaveAction?Id=@emp.Lid" class="btn btn-outline-info text-decoration-none"><i class="fa fa-pencil" aria-hidden="true"></i>Action</a></td>
        }
    </tr>
        }
    </table>
</body>
</html>
