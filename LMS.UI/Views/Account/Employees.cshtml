@model List<LMS.Model.Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<html>

<body>
    <h1>Employees</h1>
    <table border="3">
        <tr>
            <th width="200">Profile picture</th>
            <th width="200">Employee Name</th>
            <th width="200">Mobile</th>

            <th width="200">Department Name</th>
            <th width="250">Employee Designation</th>
            <th width="200">Special Permission</th>
            @if (User.IsInRole("Admin") || User.IsInRole("AdminSpecial"))
            {
            <th width="200">Edit</th>
            <th width="200">Delete</th>
            }

        </tr>
        @foreach (var emp in Model)
        {
    <tr>
        <td><img src="data:image;base64,@emp.ImageUrl" width="50" /></td>
        <td>@emp.EmployeeName</td>
        <td>@emp.Mobile</td>
        <td>@emp.DepartmentName</td>
        <td>@emp.EmployeeDesignation</td>
        <td>@emp.SpecialPermission</td>
        @if (User.IsInRole("Admin") || User.IsInRole("AdminSpecial"))
        {
            <td> <a href="/Account/Edit?Id=@emp.Id" class="btn btn-outline-info text-decoration-none"><i class="fa fa-pencil" aria-hidden="true"></i>Edit Profile</a></td>
            <td> <a href="/Account/Delete?Id=@emp.Id" class="btn btn-outline-info text-decoration-none"><i class="fa fa-pencil" aria-hidden="true"></i>Delete</a></td>
        }
    </tr>
        }
    </table>
</body>
</html>


