@model LeaveManagementSysytem.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>Register</h2>
<form action="/Account/Register" method="post">
    @Html.AntiForgeryToken()
    <div class="form-row">

        <div class="form-group col-md-6">
            <label for="EmployeeName">EmployeeName</label>
            <input type="text" class="form-control" id="EmployeeName" name="EmployeeName" placeholder="EmployeeName" required>
            @Html.ValidationMessageFor(temp => temp.EmployeeName)
        </div>
        <div class="form-group col-md-6">
            <label for="Email">Email</label>
            <input type="Email" class="form-control" id="Email" name="Email" placeholder="Email" required>

            @Html.ValidationMessageFor(temp => temp.Mobile)
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Password">Password</label>
            <input type="password" class="form-control" id="Password" name="Password" placeholder="Password" required>
            @Html.ValidationMessageFor(temp => temp.Password)
        </div>
        <div class="form-group col-md-6">
            <label for="ConfirmPassword">ConfirmPassword</label>
            <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="ConfirmPassword" required>
            @Html.ValidationMessageFor(temp => temp.ConfirmPassword)
        </div>

    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Mobile">Mobile</label>
            <input type="number" class="form-control" id="Mobile" name="Mobile" placeholder="Mobile" pattern="^[789]\d{9}$">
            @Html.ValidationMessageFor(temp => temp.Mobile)
        </div>

        <div class="form-group col-md-6">
            <label for="Projectid">Projectid</label>
            <input type="number" class="form-control" id="Projectid" name="Projectid" placeholder="Projectid" required>
            @Html.ValidationMessageFor(temp => temp.Projectid)
        </div>

        @*    <input type="number" class="form-control" id="SpecialPermission" name="Special Permission" placeholder="1 or 0" [1,0] required>
        *@    @Html.ValidationMessageFor(temp => temp.SpecialPermission)
    </div>


    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="DepartmentName">DepartmentName</label>
            <select id="DepartmentName" name="DepartmentName" required>
                <option value="Developer">Developer</option>
                <option value="HR">HR</option>
                <option value="Marketing">Marketing</option>
                <option value="QA">QA</option>
                <option value="Testing">Testing</option>
                <option value="Administration">Administration</option>
            </select>
        </div>
        <input type="hidden" name="SpecialPermission" value=false />

        <!--<div class="form-group col-md-6">-->
            @* <label for=Special Permission">Special Permission</label>
        <select id="SpecialPermission" name="SpecialPermission" required>
            <option value="true">true</option>
            <option value="false">false</option>
        </select>*@

            @* <input type="number" class="form-control" id="Departmentid" name="Departmentid" placeholder="Departmentid">
            *@ <!--@Html.ValidationMessageFor(temp => temp.Departmentid)
        </div>
    </div>-->
    <div class="form-row">


        <div class="form-group col-md-6">
            <label for="EmployeeDesignation">EmployeeDesignation</label>
            <select id="EmployeeDesignation" name="EmployeeDesignation" required>
                <option value="ProjectManager">ProjectManager/VirtualManager</option>
                <option value="Employee">Employee</option>
                <option value="HR">HR</option>


            </select>
            @Html.ValidationMessageFor(temp => temp.EmployeeDesignation)
        </div>


    </div>
    @Html.ValidationSummary()
<div class="form-row">

    <div class="form-group col-md-12">

        <button type="submit" class="btn btn-success">Register</button>
        <a class="btn btn-danger" href="/Home/Index">Cancel</a>
    </div>
</div>
</form>








